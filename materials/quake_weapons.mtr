/***********************************************************************

	quake_weapons.mtr 
	- Material shaders for Quake related weapons.  
	tx = standard model material
	inv = invisable for Ring of Shadows
	w = world model material

***********************************************************************/

// Quake Axe - does have world model which uses standard material
models/quake/weapons/axe/quake_axe_tx
{
	ricochet
    noselfShadow
	unsmoothedTangents

	diffusemap	 	models/quake/weapons/axe/axe_d.tga
	bumpmap      	models/quake/weapons/axe/axe_local.tga
	specularmap	 	models/quake/weapons/axe/axe_s.tga
}


models/quake/weapons/axe/quake_axe_inv
{
	noShadows
	noselfShadow
	unsmoothedTangents
	translucent

	bumpmap     models/quake/weapons/axe/axe_local.tga
	{
		blend 	specularmap
		map		models/invis_s.tga
		translate	time * 0 , time * 0.8
	}
}

