}

models/quake/weapons/lightning/quake_lightning_bolt
{
	noSelfShadow
	noshadows
	translucent
	discrete
	twosided
	nonsolid
	noimpact
	sort nearest
	{
		forceHighQuality
		if ( time + parm4 ) * 8 < 1.0
		maskcolor
		map 		makealpha(models/quake/weapons/lightning/lightning_boltmask.tga)
	}
	{
		forceHighQuality
		if ( time + parm4 ) * 8 < 1.0
	   	blend 	gl_dst_alpha, gl_one
	    	maskalpha
	    	map 		models/quake/weapons/lightning/lightning_bolt.tga
		scale 	1, 1
		translate	time * -0.6 , time * 0
		rgb		neontable2 [ time * 0.35 ]
	}
	{
		forceHighQuality
		if ( time + parm4 ) * 8 < 1.0
	   	blend 	gl_dst_alpha, gl_one
	    	maskalpha
	    	map 		models/quake/weapons/lightning/lightning_bolt.tga
		scale 	1, 1
		translate	time * -1 , time * 0
	}
}

