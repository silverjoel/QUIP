//MUZZLE FLASHES

models/quake/weapons/nailgun/quake_nailgun_flash
{
	sort nearest
	{
		forceHighQuality
		if 		( time + parm4 ) * 8 < 1.0
		blend 	add
		map 		textures/particles/pistol_mflash_strip.tga
		scale 	1 / 12 , 1
		scroll 	table12[ (time + parm4) * 8 ] , 0
		rotate	rotate90[ parm5 ]
	}
